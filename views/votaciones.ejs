<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script type="text/javascript">
  const url= 'http://localhost:4000';

  var table= document.createElement('table');

  const getElec= async()=>{
    const { data } = await axios.get(url + '/elecciones');
    var tr= document.createElement('tr');
    var th= document.createElement('th');
    var text= document.createTextNode('Elección');
    th.appendChild(text);
    tr.appendChild(th);
    var th2= document.createElement('th');
    var text2= document.createTextNode('Fecha');
    th2.appendChild(text2);
    tr.appendChild(th2);
    tablas.appendChild(tr);

    data.forEach(function(item) {
      
      var tr= document.createElement('tr');
      var td1= document.createElement('td');
      var td2= document.createElement('td');
      var td3= document.createElement('td');
      var btn= document.createElement('button');
      var text1= document.createTextNode(item.eleccion_nombre);
      var text2= document.createTextNode(item.eleccion_fecha);

      td1.appendChild(text1);
      td2.appendChild(text2);
      td3.appendChild(btn);
      tr.appendChild(td1);
      tr.appendChild(td2);
      tr.appendChild(td3);
      tablas.appendChild(tr);
    });
  }
  getElec()

</script>


